    <script>
        function getIrrelevantAnswer() {
            const responses = [
                "Search it up yourself", "I don't know, ask Google", "Why don't you try looking it up?", 
                "Figure it out on your own", "Not my job to answer that", "Use your brain for once",
                "Ever heard of a search engine?", "I'm not your personal Google", "Try doing some research", 
                "Look it up, lazy", "Ask someone else", "Do I look like Wikipedia?", "Google exists for a reason",
                "Maybe try thinking about it?", "You have a phone, use it", "Do some digging yourself", 
                "That's what the internet is for", "Find out the hard way", "Use your resources", "Not my problem",
                "I'm not a search engine", "Go explore the answer yourself", "Do some independent thinking",
                "Look it up like everyone else", "You expect me to know everything?", "I'm not your teacher",
                "Try asking someone smarter", "You can do it, I believe in you", "Why are you asking me?",
                "Figure it out, detective", "Google is free, you know", "Try an encyclopedia", "I'm not answering that",
                "Do some homework first", "That's classified information", "Go on a quest for knowledge",
                "Not in the mood to answer", "Find out yourself, it's fun", "You can solve this mystery",
                "I'm not your information slave", "You have a whole internet to explore", "That’s a secret I’ll never tell",
                "Think harder", "Do some critical thinking", "That’s for you to discover", "Go be a detective",
                "You’ll appreciate it more if you find it yourself", "Use that search bar", "I'm not your encyclopedia",
                "Self-reliance is key"
            ];
            return responses[Math.floor(Math.random() * responses.length)];
        }

        function handleKeyPress(event) {
            if (event.key === "Enter") {
                const input = document.getElementById("chatInput").value;
                if (!input.trim()) return;
                
                const chatBox = document.getElementById("chatBox");
                
                const userMessage = document.createElement("div");
                userMessage.classList.add("message", "user-message");
                userMessage.innerText = input;
                chatBox.appendChild(userMessage);
                
                const botMessage = document.createElement("div");
                botMessage.classList.add("message", "bot-message");
                botMessage.innerText = getIrrelevantAnswer();
                chatBox.appendChild(botMessage);
                
                document.getElementById("chatInput").value = "";
                chatBox.scrollTop = chatBox.scrollHeight;
            }
        }
        
        function openCalculator() {
            let expression = prompt("Enter a math expression:");
            if (!expression) return;
            try {
                expression = expression.replace(/(\d)(\()/g, "$1*($2");
                let result = Function("return " + expression)();
                let offset = Math.random() < 0.5 ? 1 : 2;
                if (result % 1 !== 0) {
                    result += (Math.random() < 0.5 ? 0.1 : 0.2);
                } else {
                    result += (Math.random() < 0.5 ? offset : -offset);
                }
                alert(result);
            } catch (e) {
                alert("Invalid expression");
            }
        }
    </script>
